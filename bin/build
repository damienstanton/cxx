set -e;

targetfile=$1
shortname=$(basename $1 .cpp)
newname=$2

compile() {
    echo "Compiling $targetfile..."
    clang++ -Wall -pipe -O2 -std=c++2a \
    -Wall -Wextra -pedantic -Wshadow -Wformat=2 -Wfloat-equal -Wconversion \
    -Wshift-overflow -Wcast-qual -Wcast-align \
    -Wno-unused-result -Wno-sign-conversion \
    $targetfile -o $shortname.ex
    echo "Executable \"$shortname.ex\" built without errors"
}

copy() {
    cp templates/template.cpp $newname.cpp
    echo "New file \"$newname.cpp\" created from template"
}

cleanup() {
    rm *.cpp && rm *.ex
    echo "All *.cpp and *.ex files are removed from the workspace"
}

case $1 in
    new) copy ;;
    clean) cleanup ;;
    *) compile ;;
esac
set -e;

targetfile=$1
shortname=$(basename $1 .go)
newname=$2

compile() {
    echo "Compiling $targetfile..."
    go build -o $shortname.ex
    echo "Executable \"$shortname.ex\" built without errors"
}

copy() {
    cp templates/template.go $newname.go
    echo "New file \"$newname.go\" created from template"
}

cleanup() {
    rm *.go && rm *.ex
    echo "All *.go and *.ex files are removed from the workspace"
}

case $1 in
    new) copy ;;
    clean) cleanup ;;
    *) compile ;;
esac
